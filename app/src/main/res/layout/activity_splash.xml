<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/splash_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/mo_logo"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mOpolskie"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textFontWeight="800"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikacja mobilna województwa opolskiego"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textAlignment="center"
            android:alpha="0.9"
            android:layout_marginBottom="40dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateTint="#FFFFFF"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicjalizacja aplikacji..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:alpha="0.8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:padding="20dp">

        <View
            android:id="@+id/connectionIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_wh_main"
            android:backgroundTint="@color/success_color"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/connectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sprawdzanie połączenia..."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:alpha="0.7"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2025 Zenwave.net"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:alpha="0.6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wszelkie prawa zastrzeżone."
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginBottom="20dp"
        android:alpha="0.6"/>

</LinearLayout>
